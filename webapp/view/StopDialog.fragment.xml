<!-- StopDialog.fragment.xml -->
<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog id="dialogoStop" title="Terminaste con el Escaneo?" afterClose="onStopDialogClose">
        <VBox >
            <VBox alignItems="Center">
                <Label text="Completa la cantidad de cubetas reales que usaste y confirma." class="tituloSecundario" />
            </VBox>

            <Table id="customTable2" items="{path: '/tableData3'}" growing="true" growingThreshold="20" growingScrollToLoad="true">
                <columns>
                    <!-- Encabezados principales -->
                    <Column width="80px">
                        <Text text="Display" />
                    </Column>
                    <Column width="60px">
                        <Text text="Ruta" />
                    </Column>
                    <Column>
                        <Text text="Cliente" />
                    </Column>
                    <Column width="250px">
                        <Text text="Razon Social" />
                    </Column>
                    <Column>
                        <Text text="TOT"/>
                    </Column>
                    <Column>
                        <Text text="SCAN" />
                    </Column>
                    <Column>
                        <Text text="FALTA" />
                    </Column>
                    <Column>
                        <Text text="Cub TEO" />
                    </Column>
                    <Column>
                        <!-- Texto sumario encima de la columna -->
                        <VBox>
                            <Text text="{/realCubetasTotal}" class="sapMTextEmphasized" />
                            <Text text="C Real" />
                        </VBox>
                    </Column>
                    <Column>
                        <!-- Texto sumario encima de la columna -->
                        <VBox>
                            <Text text="{/realPalletsTotal}" class="sapMTextEmphasized" />
                            <Text text="Pa" />
                        </VBox>
                    </Column>
                    <!-- <Column>
                        <Text text="C Real" />
                    </Column>
                    <Column>
                        <Text text="Pa" />
                    </Column> -->
                </columns>
                <items>
                    <!-- Filas de datos -->
                    <ColumnListItem>
                        <cells>
                             <Text text="{DISPLAY}" />
                            <Text text="{Ruta}" />
                            <Text text="{CLIENTE}" />
                            <Text text="{RAZONSOCIAL}" />
                            <Text text="{TOT}" />
                            <Text text="{SCAN}" />
                            <Text text="{FALTA}" />
                            <Text text="{Cub TEO}" />

                            <Input value="{C Real}" liveChange="onRealCubetasChange" />
                            <!-- Input para Pa con evento de cambio -->
                            <Input value="{Pa}" liveChange="onPalletsChange" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            <Button text="Confirmar" type="Emphasized" press="onStopConfirm"/>
        </VBox>
    </Dialog>

</core:FragmentDefinition>